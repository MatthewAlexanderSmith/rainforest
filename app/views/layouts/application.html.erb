<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  <div class="container">
    <header class="twelve coluns">
      <h1 class="four columns">RainForest</h1>


          <div class="float-right nav">
             <% if current_user %>
                <p>
                  <%= link_to "New Product", new_product_path, class: "button" %>
                  <%= link_to "User Profile", user_path(current_user), class: "button" %>
                  <%= link_to "Log out", session_path("current"), :method => :delete, class: "button" %>
                </p>
             <% else %>
                <p>
                  <%= link_to "Log in", new_session_path, class: "button" %> or <%= link_to "Sign up", new_user_path,
               class: "button" %>
                </p>
            <% end %>
          </div>


    </header>



    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>



      <%= yield %>


      <footer class="twelve columns">
        <p class="userinfo">
          <% if current_user %>
            Signed in as <%= current_user.name%>. <%= link_to "Log out", session_path("current"), :method => :delete %>
          <% else %>

          <% end %>
        </p>
      </footer>
  </div>
  </body>
</html>
