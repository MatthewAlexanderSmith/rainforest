<h1>Show Product</h1>
<%= link_to "Back to Products", products_path %> | <%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete", @picture, method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}  %>

<div>
  <p><%= @product.name %></p>
  <p><%= @product.description %></p>
  <%= @product.formatted_price %>
</div>

<h3>Reviews</h3>



<% if @product.reviews.any? %>

    <% @product.reviews.each do |review|  %>
        <p>
          <%= review.comment %>
          <br>
          <% if review.user != nil  %>
              <em> by <%= review.user.email %></em>
              Added on: <%= review.created_at %>
          <% end %>
          <%= link_to "Delete Review", product_review_path(@product, review), method: :delete, data: {confirm: "Are
          you sure you want to delete"} %>
        </p>
    <% end %>

<% else %>
    <p>
      Be the first to review this product!
    </p>

<% end %>



<%= render 'reviews/form' %>
